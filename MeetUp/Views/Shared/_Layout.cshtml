<!DOCTYPE html>
<html>
<head>
    <title>Meet UP</title>
    <link href="https://fonts.googleapis.com/css?family=Fruktur&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Itim&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Istok Web" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>

        @*Header content start*@

        <header>
            <nav class="navbar navbar-expand-lg bg-body-tertiary">
                <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")"><img src="~/img/logo.png" alt="MeetUp Logo"></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="@Url.Action("Index","Home")">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index","BookAppointment")">Book Appointment</a>
                            </li>
                            <li class="nav-item">
                                @*<a class="nav-link" href="@Url.Action("Index","AboutUs")">About Us</a>*@
                                <a class="nav-link" href="@Url.Action("Index","Appointment")">About Us</a>
                            </li>
                        </ul>
                        <div class="d-flex" role="search" runat="server">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success" type="submit">
                                <img src="~/img/search_icon.png"
                                     class="search_icon">
                            </button>
                        </div>
                        <div>
                            <button class="login_btn" id="booking_btn" onclick="window.location.href ='@Url.Action("Login", "User")';">Login</button>
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        @*Header content end*@

        @*main content start*@

            <main role="main">
                @RenderBody()
            </main>


        @*main content end*@

        @*footer content start*@

        <footer>
            <div class="footer-container">
                <div class="footer-row">
                    <div class="footer-col">
                    <a href="@Url.Action("Index", "Home")"><img src="~/img/logo.png" alt="MeetUp Logo"></a>
                        <p>
                            A online platform where user can meet or book an appointment to whom ever they want to meet. They can
                            schedule their meeting and get the confirmation on their mail.
                        </p>
                    </div>
                    <div class="footer-col contact-col">
                        <div class="footer-email">
                            <h3 class="footer-h3">Email</h3>
                        </div>
                        <ul>
                        <li class="social-icon-1"><a href="mailto:eshikat355@rku.ac.in ? {subject} = {subject}" class="email-link">eshikat355@rku.ac.in</a></li>
                        <li class="social-icon-1"><a href="mailto:bkumarsah627@rku.ac.in ? {subject} = {subject}" class="email-link">bkumarsah627@rku.ac.in</a></li>
                        </ul>
                        <div class="footer-follow-us">
                            <h3 class="footer-h3">Follow Us</h3>
                        </div>
                        <ul class="social-icons">
                            <li>
                                <a href="#">
                                    <img src="~/img/github_icon.png" alt="Github Icon"
                                        style="height: 26px; width:26px;" class="social-icon-1">
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <img src="~/img/instagram_icon.png" alt="Instagram Icon"
                                          style="height: 26px; width:26px;">
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <img src="~/img/facebook_icon.png" alt="Facebook Icon"
                                          style="height: 26px; width:26px;">
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="footer-container con-2">
                <div class="footer-row row-2">
                    <div class="footer-col copy-col">
                        <p class="copyright">Copyright &copy 2023 MeetUp Team (<a href="https://www.linkedin.com/in/bibek-sah-b81b351a7/">Bibek</a> & <a href="https://www.linkedin.com/in/eftakhar-mahmud-shikat-3b0920144/">Shikat</a>)</p>
                    </div>
                    <div class="footer-col nav-col">
                        <nav class="footer-nav">
                            <ul class="">
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Home</a>
                                </li>
                                <li>
                                    <img src="~/img/line_icon.png" style="height: 20px;">
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Profile</a>
                                </li>
                                <li>
                                <img src="~/img/line_icon.png" style="height: 20px;">
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Book Appointment</a>
                                </li>
                                <li>
                                <img src="~/img/line_icon.png" style="height: 20px;">
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">About Us</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </footer>

        @*footer content end*@
    <script src="~/js/style.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>